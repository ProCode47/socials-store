{
  "manifest_version": 3,
  "name": "Social Store",
  "description": "Get your social profiles from every platform in one place",
  "version": "1.0.0",
  "author": "Chukwuemeka Victor",
  "action": {
    "default_icon": {
      "16": "social.png",
      "48": "social.png",
      "128": "social.png"
    },
    "default_title": "Click Me"
  },
  "permissions": ["tabs", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  }
}
